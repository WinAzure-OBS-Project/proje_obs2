                <tr>
                    <td>Kayıt Id</td>
                    <td>Not Id</td>
                    <td>Ogrenci No</td>
                    <td>Ders Adı</td>
                    <td>Yıl Not</td>
                    <td>Harf Notu</td>
                </tr>
            </thead>

            @foreach (var k in kayitlar1)
            {

                using (Html.BeginForm("TranskriptGor", "Ogrenci"))
                {
                    <tr>
                        <td>
                            <div>@k.not.kayit.KayitId</div>
                        </td>
                        <td>
                            <div>@k.not.kayit.NotId</div>
                        </td>
                        <td>
                            <div>@k.not.kayit.OgrenciNo</div>
                        </td>
                        <td>
                            <div>@k.not.kayit.AcilanDers.DersAdi</div>
                        </td>
                        <td>
                            <div>@k.not.YilNot</div>
                        </td>
                        <td>
                            <div>@k.not.HarfNotu</div>
                        </td>
                    </tr>
                    {
                        sum = 0;
                        foreach (Kayit j in kayitlar1)
                        {
                            sum += j.not.YilNot.HasValue ? j.not.YilNot.Value : 0;

                        }

                    }
                }
            }
        </table>
    </div>
    <div>Donem ortalamasi: @(sum/kayitlar1.Count)</div>
