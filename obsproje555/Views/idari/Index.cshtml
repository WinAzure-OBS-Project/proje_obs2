@using proje_obs
@model Idari
<div class="row">
    <div class="sidebar-left col">
        &nbsp;
        <ul>
            <li>
                <a>Öğrencileri listele</a>
            </li>
            <li>
                <a>Öğretmenleri listele</a>
            </li>
            <li>
                <a>İdari elemanları listele</a>
            </li>
            <li>
                <a>Duyuru yap</a>
            </li>
            <li>
                <a href="/idari/UploadBanner">Siteyi düzenle</a>
            </li>
            <li>
                <a>Şifreni değiştir</a>
            </li>
            <li>
                <a>Fotoğraf ekle</a>
            </li>
            <li>
                @using (Html.BeginForm("Logout", "idari", FormMethod.Post))
                {
                    <input class="logout" type="submit" value="Çıkış yap" />
                }
            </li>
        </ul>
    </div>
    <div class="center col">
        &nbsp;
        <fieldset>
            <legend>İdari bilgileri</legend>
            <table>
                <tr>
                    <td>Id</td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td>Adı Soyadı</td>
                    <td>@Model.Adi @Model.Soyadi</td>
                </tr>
                <tr>
                    <td>Mail</td>
                    <td>@Model.Mail</td>
                </tr>
                <tr>
                    <td>Telefon</td>
                    <td>@Model.Tel</td>
                </tr>
                <tr>
                    <td>Adresi</td>
                    <td>@Model.Adres</td>
                </tr>
                <tr>
                    <td>Ünvanı</td>
                    <td>@Model.Unvan</td>
                </tr>
            </table>
        </fieldset>
    </div>
    <div class="sidebar-right col">
    </div>
</div>